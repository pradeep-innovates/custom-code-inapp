<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when pressed (gray background) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#B0B0B0" /> <!-- Gray color when pressed -->
            <stroke android:width="1dp" android:color="#DDDDDD" /> <!-- Light gray border -->
            <corners android:radius="16dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Default state (light background with border) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FAFAFA" /> <!-- Light background color -->
            <stroke android:width="1dp" android:color="#DDDDDD" /> <!-- Light gray border -->
            <corners android:radius="16dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</selector>
